{
  "wasmProtection": {
    "enabled": true,
    "mode": "backwards-compatible",
    "memoryLimits": {
      "maxHeapMB": 512,
      "maxBufferMB": 256,
      "gcThresholdMB": 384
    },
    "errorHandling": {
      "catchWASMErrors": true,
      "autoRecover": true,
      "maxRetries": 3,
      "retryDelayMs": 1000
    },
    "performance": {
      "preallocateBuffers": true,
      "gcInterval": 5000,
      "reduceConcurrency": true,
      "maxConcurrentOps": 2
    },
    "compatibility": {
      "nodeVersion": ">=18.0.0",
      "claudeCodeCLI": true,
      "fallbackMode": "graceful"
    },
    "monitoring": {
      "logErrors": true,
      "logMemoryUsage": true,
      "metricsInterval": 10000
    }
  },
  "tierSystem": {
    "enableProtection": true,
    "maxTierDepth": 15,
    "absorptionBuffer": 4096,
    "syncInterval": 2000
  },
  "gridIntegration": {
    "dataBufferSize": 65536,
    "batchOperations": true,
    "batchSize": 100,
    "asyncProcessing": true
  }
}