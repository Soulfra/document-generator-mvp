{
  "name": "AnonTV Music Knot Platform",
  "description": "Complete platform bridging knot theory, music generation, and visual creation - from trefoils to game soundtracks",
  "repository": "https://github.com/username/document-generator-mvp",
  "logo": "https://raw.githubusercontent.com/username/document-generator-mvp/main/public/anontv-logo.png",
  "keywords": [
    "music-generation",
    "knot-theory", 
    "game-audio",
    "ai-creativity",
    "visual-editor",
    "real-time-audio"
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "PORT": {
      "description": "Port for the web server",
      "value": "3000"
    },
    "ANTHROPIC_API_KEY": {
      "description": "Anthropic API key for AI services",
      "required": false
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key for AI services", 
      "required": false
    },
    "OLLAMA_BASE_URL": {
      "description": "Ollama base URL for local AI models",
      "value": "http://localhost:11434",
      "required": false
    },
    "REDIS_URL": {
      "description": "Redis URL for caching and sessions",
      "required": false
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "hobby"
    }
  },
  "addons": [
    {
      "plan": "heroku-redis:mini",
      "as": "REDIS"
    },
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "scripts": {
    "postdeploy": "npm run setup:production"
  },
  "environments": {
    "production": {
      "buildpacks": [
        {
          "url": "heroku/nodejs"
        }
      ],
      "formation": {
        "web": {
          "quantity": 1,
          "size": "standard-1x"
        }
      }
    },
    "staging": {
      "formation": {
        "web": {
          "quantity": 1,
          "size": "hobby"
        }
      }
    }
  }
}