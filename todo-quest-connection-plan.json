{
  "todoSystem": "./todo-deduplication-system.js",
  "questSystem": "./quest-engine.js",
  "electronDashboard": "./electron-main.js",
  "connections": [
    {
      "from": "todo-completion",
      "to": "quest-progress",
      "trigger": "todo marked completed → quest XP awarded"
    },
    {
      "from": "quest-completion",
      "to": "new-todos",
