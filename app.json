{
  "name": "Domingo Orchestrator",
  "description": "AI-powered backend orchestrator with character delegation and task management",
  "repository": "https://github.com/yourusername/domingo-orchestrator",
  "logo": "https://raw.githubusercontent.com/yourusername/domingo-orchestrator/main/logo.png",
  "keywords": [
    "orchestrator",
    "task-management",
    "ai-characters",
    "websocket",
    "backend-automation"
  ],
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "14"
      }
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "DOMINGO_PORT": {
      "description": "Main orchestrator port",
      "value": "7777",
      "required": false
    },
    "DOMINGO_WS_PORT": {
      "description": "WebSocket port",
      "value": "7778",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}