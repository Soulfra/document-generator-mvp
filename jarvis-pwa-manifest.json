{
  "name": "Jarvis HUD - Document Generator",
  "short_name": "Jarvis HUD",
  "description": "Iron Man-style HUD interface with reasoning visualization and AI context bridge for cross-platform deployment",
  "version": "1.0.0",
  "manifest_version": 3,
  "start_url": "/jarvis-main-interface.html",
  "display": "standalone",
  "orientation": "landscape",
  "theme_color": "#00ffff",
  "background_color": "#000000",
  "scope": "/",
  "lang": "en-US",
  "categories": ["productivity", "developer", "ai", "utilities"],
  
  "icons": [
    {
      "src": "./assets/jarvis-icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "./assets/jarvis-icon-512.png", 
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "./assets/jarvis-icon-apple-touch.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  
  "screenshots": [
    {
      "src": "./assets/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Jarvis HUD main interface on desktop"
    },
    {
      "src": "./assets/screenshot-hud.png", 
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "HUD overlay with reasoning visualization"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Activate HUD",
      "short_name": "HUD",
      "description": "Activate the holographic overlay interface",
      "url": "/jarvis-main-interface.html?action=activate-hud",
      "icons": [
        {
          "src": "./assets/hud-shortcut-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Reasoning Visualizer",
      "short_name": "Reasoning",
      "description": "Open live reasoning stream visualization",
      "url": "/reasoning-stream-visualizer.html",
      "icons": [
        {
          "src": "./assets/reasoning-shortcut-icon.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "AI Bridge",
      "short_name": "AI Bridge",
      "description": "Open AI context bridge interface",
      "url": "/ai-watcher-interface.html",
      "icons": [
        {
          "src": "./assets/ai-shortcut-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Fog of War",
      "short_name": "Fog Explorer",
      "description": "3D website exploration interface",
      "url": "/fog-of-war-3d-explorer.html",
      "icons": [
        {
          "src": "./assets/fog-shortcut-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "windows",
      "url": "https://github.com/your-username/jarvis-hud/releases/download/latest/jarvis-hud-setup.exe",
      "id": "com.jarvis.hud.windows"
    },
    {
      "platform": "macos", 
      "url": "https://github.com/your-username/jarvis-hud/releases/download/latest/jarvis-hud-macos.dmg",
      "id": "com.jarvis.hud.macos"
    },
    {
      "platform": "linux",
      "url": "https://github.com/your-username/jarvis-hud/releases/download/latest/jarvis-hud-linux.AppImage",
      "id": "com.jarvis.hud.linux"
    }
  ],
  
  "prefer_related_applications": false,
  
  "permissions": [
    "storage",
    "notifications",
    "webRequest",
    "activeTab"
  ],
  
  "features": [
    "Cross-platform deployment (Chromebook, Chrome, Apple devices)",
    "Real-time reasoning visualization",
    "AI context bridge integration", 
    "Fog of war 3D exploration",
    "Boss room cursor overlay",
    "Multi-platform broadcasting support",
    "Holographic HUD interface",
    "WebSocket real-time communication",
    "JSONL reasoning logs",
    "Screenshot with context capture"
  ],
  
  "platforms": {
    "chromebook": {
      "enabled": true,
      "optimized": true,
      "features": ["touch", "keyboard", "trackpad"]
    },
    "chrome": {
      "enabled": true,
      "extension_compatible": true,
      "minimum_version": "88"
    },
    "apple": {
      "safari_compatible": true,
      "ios_compatible": true, 
      "macos_compatible": true
    },
    "android": {
      "enabled": true,
      "minimum_version": "7.0"
    }
  },
  
  "deployment": {
    "vercel": {
      "supported": true,
      "config": "vercel.json"
    },
    "netlify": {
      "supported": true,
      "config": "netlify.toml"
    },
    "railway": {
      "supported": true,
      "config": "railway.toml"
    },
    "github_pages": {
      "supported": true,
      "branch": "gh-pages"
    }
  },
  
  "integrations": {
    "reasoning_viz": {
      "port": 3006,
      "websocket": true,
      "required": true
    },
    "ai_bridge": {
      "port": 3007,
      "api": true,
      "required": true
    },
    "fog_of_war": {
      "embedded": true,
      "three_js": true
    },
    "boss_room": {
      "embedded": true,
      "cursor_overlay": true
    },
    "broadcasting": {
      "twitch": true,
      "youtube": true,
      "tor": true,
      "self_hosted": true
    }
  },
  
  "development": {
    "hot_reload": true,
    "debug_mode": true,
    "console_access": true
  },
  
  "security": {
    "content_security_policy": "default-src 'self'; connect-src 'self' ws://localhost:* http://localhost:*; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval';",
    "permissions_policy": "camera=(), microphone=(), geolocation=()"
  },
  
  "offline": {
    "enabled": true,
    "fallback_page": "/offline.html",
    "cache_strategy": "cache_first",
    "assets": [
      "/jarvis-main-interface.html",
      "/jarvis-hud-overlay.html", 
      "/reasoning-stream-visualizer.html",
      "/ai-watcher-interface.html",
      "/fog-of-war-3d-explorer.html",
      "/boss-room-cursor-overlay.html"
    ]
  }
}