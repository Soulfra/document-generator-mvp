# JWT secrets (for future auth implementation)
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here

# Master Security Keys (CHANGE ALL OF THESE IN PRODUCTION!)
MASTER_SECRET=change-this-master-secret-in-production-please-use-32-chars-minimum
ENCRYPTION_KEY=optional-separate-encryption-key-defaults-to-master-secret
SESSION_SECRET=change-this-session-secret-in-production-use-32-chars-minimum

# CSRF Protection
CSRF_TOKEN_LENGTH=32
CSRF_TOKEN_TTL=3600

# API Security
API_KEY_PREFIX=sk
API_KEY_TEST_PREFIX=sk-test
API_KEY_ROTATION_DAYS=90
API_REQUEST_SIGNATURE_MAX_AGE=300
REQUEST_SIGNING_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_SALT_ROUNDS=10

# Webhook Security
WEBHOOK_SECRET_GITHUB=your-github-webhook-secret
WEBHOOK_SIGNATURE_MAX_AGE=300

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=/api/security/csp-report
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
SECURE_COOKIES=false
TRUST_PROXY=false

# Secrets Management
SECRETS_STORAGE_BACKEND=redis
SECRETS_ENCRYPTION_ENABLED=true
SECRETS_ROTATION_CHECK_INTERVAL=3600000
SECRETS_DEFAULT_TTL=0

# Input Validation
MAX_REQUEST_SIZE=10mb
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=.jpg,.png,.pdf,.zip,.js,.ts

# Audit & Monitoring
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90
SECURITY_MONITORING_ENABLED=true

# Security Features
MFA_ENABLED=false
SSO_ENABLED=false
COMPLIANCE_MODE=false
GDPR_ENABLED=true
CCPA_ENABLED=true
ANOMALY_DETECTION=false
HONEYPOT_ENABLED=false
SHADOW_BAN_ENABLED=false
VIRUS_SCAN_ENABLED=false
QUARANTINE_ENABLED=false
STRICT_SECURITY=false

