# FinishThisIdea Infrastructure Configuration
# Copy this file to terraform.tfvars and update with your values

# General Configuration
environment = "development"
aws_region  = "us-east-1"
cost_center = "engineering"

# Performance Tier (minimal, standard, performance, enterprise)
performance_tier = "standard"

# Database Configuration
database_password = "your-secure-database-password-here"

# Application Secrets
anthropic_api_key = "sk-ant-api03-your-key-here"
stripe_secret_key = "sk_test_your-stripe-key-here"
jwt_secret        = "your-super-secure-jwt-secret-minimum-32-chars"

# Monitoring
alarm_email = "alerts@yourdomain.com"

# DNS Configuration (optional)
create_dns_zone = false
domain_name     = "finishthisidea.com"

# SSL Certificates (optional)
ssl_certificate_arn        = ""
cloudfront_certificate_arn = ""
cloudfront_aliases         = []

# Network Configuration (optional - defaults are usually fine)
# vpc_cidr = "10.0.0.0/16"
# private_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
# public_subnet_cidrs  = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# Advanced Configuration (override defaults)
# eks_cluster_version = "1.28"
# rds_engine_version  = "15.4"
# redis_engine_version = "7.0"
# backup_retention_days = 30
# log_retention_days = 90