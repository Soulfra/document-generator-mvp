# Document Generator Environment Configuration
# üö® SECURITY WARNING: NEVER commit files with real API keys to Git!
# Copy this file to .env and replace placeholder values with your real keys

# =============================================================================
# GITHUB OAUTH
# =============================================================================
# Create OAuth app at: https://github.com/settings/developers
# For production: 
#   Homepage URL: https://your-domain.com
#   Callback URL: https://your-domain.com/auth/github/callback
# For development:
#   Homepage URL: http://localhost:3000  
#   Callback URL: http://localhost:3000/auth/github/callback
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
AI_API_PORT=3001
ANALYTICS_PORT=3002
PLATFORM_HUB_PORT=8080
WS_PORT=8081

# Generate a secure session secret: openssl rand -base64 32
SESSION_SECRET=your-secure-session-secret-here

# =============================================================================
# SECURITY SETTINGS (Generate secure values for production)
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Rate limiting (optional - has defaults)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session settings (optional - has defaults)
SESSION_MAX_AGE_MS=86400000
TOKEN_EXPIRY_SECONDS=300

# =============================================================================
# AI API KEYS (‚ö†Ô∏è SET SPENDING LIMITS TO PROTECT YOUR ACCOUNT!)
# =============================================================================
# OpenAI API Key (for GPT models)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (for Claude models)  
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# DeepSeek API Key (cheaper alternative to OpenAI/Anthropic)
# Get from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=sk-your-deepseek-key-here

# =============================================================================
# DATABASE & STORAGE
# =============================================================================
# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/document_generator

# Redis
REDIS_URL=redis://localhost:6379

# MinIO / S3 Compatible Storage
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
S3_BUCKET=document-generator-uploads
S3_ENDPOINT=http://localhost:9000

# =============================================================================
# LOCAL AI CONFIGURATION (Free alternative)
# =============================================================================
# Ollama configuration (free local AI - fallback option)
# Install: https://ollama.ai/
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODELS=codellama:7b,mistral,llama2

# ===========================
# Payment Configuration
# ===========================

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-test-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_BASIC=price_basic
STRIPE_PRICE_ID_PRO=price_pro
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise

# ===========================
# Authentication & Security
# ===========================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# API Keys
INTERNAL_API_KEY=fti_internal_your-secure-key-here
ADMIN_API_KEY=admin_your-secure-admin-key

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HTTPS=false

# ===========================
# Feature Flags
# ===========================

# Services
ENABLE_TEMPLATE_PROCESSOR=true
ENABLE_AI_API=true
ENABLE_ANALYTICS=true
ENABLE_PLATFORM_HUB=true

# AI Providers
ENABLE_OLLAMA=true
ENABLE_ANTHROPIC=true
ENABLE_OPENAI=true
ENABLE_AZURE_OPENAI=false

# Features
ENABLE_PAYMENT=true
ENABLE_WEBSOCKET=true
ENABLE_MONITORING=true
ENABLE_CACHING=true
DEMO_MODE=false

# ===========================
# Monitoring & Analytics
# ===========================

# Prometheus
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Grafana
GRAFANA_PORT=3003
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Sentry (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# ===========================
# Email Configuration
# ===========================

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Document Generator <noreply@document-generator.com>

# ===========================
# External Services
# ===========================

# GitHub (for issue tracking)
GITHUB_TOKEN=
GITHUB_REPO=your-org/document-generator

# Discord (for notifications)
DISCORD_WEBHOOK_URL=

# Slack (for notifications)
SLACK_WEBHOOK_URL=

# ===========================
# Development Configuration
# ===========================

# Hot Reload
ENABLE_HOT_RELOAD=true

# Debug
DEBUG=document-generator:*
DEBUG_SQL=false

# Test Configuration
TEST_TIMEOUT=30000
ENABLE_TEST_FIXTURES=true

# ===========================
# Performance Tuning
# ===========================

# Cache TTL (seconds)
CACHE_TTL_DEFAULT=3600
CACHE_TTL_AI_RESPONSE=7200
CACHE_TTL_TEMPLATES=86400

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# Upload Limits
MAX_FILE_SIZE=104857600  # 100MB
MAX_FILES_PER_UPLOAD=10

# ===========================
# MCP (Model Context Protocol)
# ===========================

# MCP Server
MCP_SERVER_PORT=3333
MCP_ENABLED=true

# Tool Configuration
MCP_TOOLS_PATH=./mcp/tools
MCP_PROMPTS_PATH=./mcp/prompts
MCP_RESOURCES_PATH=./mcp/resources

# ===========================
# Claude Code CLI Integration
# ===========================

# Memory Locations
CLAUDE_PROJECT_MEMORY=./CLAUDE.md
CLAUDE_USER_MEMORY=~/.claude/CLAUDE.md

# Tool Preferences
CLAUDE_PREFER_LOCAL_TOOLS=true
CLAUDE_AUTO_CONTEXT_LOADING=true

# ===========================
# Docker Configuration
# ===========================

# Container Registry
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=
DOCKER_PASSWORD=

# Compose Project
COMPOSE_PROJECT_NAME=document-generator
COMPOSE_FILE=docker-compose.yml
COMPOSE_PROFILES=