{
  "name": "jarvis-hud-document-generator",
  "version": "1.0.0",
  "description": "Iron Man-style HUD interface with reasoning visualization and AI context bridge for cross-platform deployment",
  "main": "jarvis-hud-electron.js",
  "homepage": "./",
  "author": {
    "name": "Document Generator",
    "email": "dev@documentgenerator.ai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/jarvis-hud-document-generator.git"
  },
  "keywords": [
    "jarvis",
    "hud",
    "ironman",
    "reasoning",
    "ai",
    "visualization",
    "electron",
    "cross-platform",
    "document-generator"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:all": "electron-builder --mac --win --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux", 
    "dist": "npm run build:all",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint jarvis-*.js",
    "setup": "node setup-jarvis.js",
    "start-services": "concurrently \"node reasoning-viz-manager.js\" \"node ai-reasoning-bridge.js\"",
    "verify": "node verify-reasoning-system.js",
    "quick-start": "./quick-start-reasoning.sh && npm start"
  },
  "dependencies": {
    "electron": "^25.0.0",
    "express": "^4.18.2",
    "ws": "^8.13.0", 
    "chokidar": "^3.5.3",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "electron-builder": "^24.6.3",
    "concurrently": "^8.2.0",
    "jest": "^29.5.0",
    "eslint": "^8.44.0",
    "@electron/rebuild": "^3.2.13"
  },
  "build": {
    "appId": "com.jarvis.hud.documentgenerator",
    "productName": "Jarvis HUD - Document Generator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "jarvis-*.js",
      "jarvis-*.html",
      "jarvis-*.json",
      "reasoning-*.js",
      "reasoning-*.html",
      "ai-*.js", 
      "ai-*.html",
      "fog-*.html",
      "boss-*.html",
      "verify-*.js",
      "package.json",
      "package-electron.json",
      "assets/**/*",
      ".reasoning-viz/config.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": ".reasoning-viz/",
        "to": "reasoning-viz/",
        "filter": ["**/*", "!logs/**", "!captures/**", "!sessions/**"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/jarvis-icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/jarvis-icon.ico",
      "publisherName": "Document Generator"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm", 
          "arch": ["x64"]
        }
      ],
      "icon": "assets/jarvis-icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Jarvis HUD"
    },
    "dmg": {
      "title": "Jarvis HUD - Document Generator",
      "backgroundColor": "#000000",
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "electronBuilder": {
    "builderVersion": "24.6.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "darwin",
    "win32", 
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64",
    "ia32"
  ],
  "jarvis": {
    "features": [
      "cross-platform-deployment",
      "reasoning-visualization", 
      "ai-context-bridge",
      "fog-of-war-exploration",
      "boss-room-cursor-overlay",
      "holographic-hud-interface",
      "multi-platform-broadcasting",
      "real-time-websockets",
      "jsonl-logging",
      "screenshot-context-capture"
    ],
    "integrations": {
      "reasoning_viz": {
        "port": 3006,
        "autostart": true
      },
      "ai_bridge": {
        "port": 3007,
        "autostart": true
      },
      "services": [
        "reasoning-viz-manager.js",
        "ai-reasoning-bridge.js"
      ]
    },
    "platforms": {
      "electron": {
        "native": true,
        "cross_platform": true
      },
      "pwa": {
        "manifest": "jarvis-pwa-manifest.json",
        "service_worker": "jarvis-sw.js"
      },
      "chrome": {
        "extension": true,
        "manifest_v3": true
      },
      "chromebook": {
        "optimized": true,
        "touch_support": true
      }
    },
    "deployment": {
      "auto_updater": true,
      "crash_reporter": true,
      "analytics": false,
      "telemetry": false
    }
  },
  "chromebook": {
    "supported": true,
    "features": ["keyboard", "mouse", "touch", "stylus"],
    "minimum_os_version": "88.0",
    "arc_runtime": false,
    "crostini": true
  },
  "apple": {
    "supported": true,
    "universal_binary": true,
    "apple_silicon": true,
    "intel": true,
    "minimum_macos": "10.14"
  },
  "security": {
    "node_integration": true,
    "context_isolation": false,
    "web_security": false,
    "allow_running_insecure_content": true,
    "experimental_features": true
  }
}