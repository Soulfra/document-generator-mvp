{
  "id": "react-modern",
  "name": "React Modern",
  "description": "Modern React development with hooks and functional components",
  "language": "javascript",
  "framework": "react",
  "version": "18+",
  "isDefault": true,
  "style": {
    "indentation": "spaces",
    "indentSize": 2,
    "lineEnding": "lf",
    "quoteStyle": "single",
    "semicolons": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "maxLineLength": 80
  },
  "rules": {
    "naming": {
      "functions": "camelCase",
      "variables": "camelCase",
      "constants": "UPPER_SNAKE",
      "classes": "PascalCase",
      "files": "PascalCase"
    },
    "imports": {
      "orderBy": "grouped",
      "groups": ["react", "external", "internal", "components", "hooks", "utils", "styles", "types"],
      "removeUnused": true,
      "addMissing": true,
      "preferRelative": false
    },
    "comments": {
      "style": "line",
      "requireForPublicApi": false,
      "removeRedundant": true,
      "preserveTodos": true
    }
  },
  "aiContext": {
    "systemPrompt": "You are a React expert specializing in modern functional components, hooks, and best practices.",
    "tone": "professional",
    "priorities": ["component-reusability", "performance", "accessibility", "maintainability"],
    "avoidPatterns": ["class components", "direct DOM manipulation", "inline styles", "any"],
    "preferredPatterns": [
      "functional components",
      "custom hooks",
      "React.memo",
      "useCallback/useMemo",
      "error boundaries",
      "suspense"
    ],
    "focusAreas": ["hooks-optimization", "component-composition", "state-management", "accessibility"]
  },
  "frameworkConfig": {
    "react": {
      "componentStyle": "functional",
      "hooksRules": true,
      "propTypesOrTypeScript": "typescript"
    }
  },
  "quality": {
    "maxComplexity": 8,
    "maxFileLength": 200,
    "maxFunctionLength": 50,
    "requireTests": true
  }
}