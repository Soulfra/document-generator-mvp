{
  "id": "python-pep8",
  "name": "Python PEP 8",
  "description": "Python style guide following PEP 8 conventions",
  "language": "python",
  "version": "3.x",
  "isDefault": true,
  "style": {
    "indentation": "spaces",
    "indentSize": 4,
    "lineEnding": "lf",
    "quoteStyle": "single",
    "semicolons": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "maxLineLength": 79
  },
  "rules": {
    "naming": {
      "functions": "snake_case",
      "variables": "snake_case",
      "constants": "UPPER_SNAKE",
      "classes": "PascalCase",
      "files": "snake_case"
    },
    "imports": {
      "orderBy": "grouped",
      "groups": ["standard", "third-party", "local"],
      "removeUnused": true,
      "addMissing": true,
      "preferRelative": false
    },
    "comments": {
      "style": "line",
      "requireForPublicApi": true,
      "removeRedundant": true,
      "preserveTodos": true
    }
  },
  "aiContext": {
    "tone": "educational",
    "priorities": ["readability", "pythonic-idioms", "simplicity"],
    "avoidPatterns": ["mutable default arguments", "bare except", "global variables"],
    "preferredPatterns": ["list comprehensions", "context managers", "generators", "type hints"],
    "focusAreas": ["pythonic-code", "error-handling", "documentation"]
  },
  "frameworkConfig": {
    "python": {
      "version": "3.x",
      "typeHints": true,
      "docstringStyle": "google"
    }
  },
  "quality": {
    "maxComplexity": 10,
    "maxFileLength": 500,
    "maxFunctionLength": 50
  }
}