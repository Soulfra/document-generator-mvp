{
  "name": "empire-launcher",
  "version": "1.0.0",
  "description": "RuneLite-inspired desktop launcher for your 300-domain empire",
  "main": "empire-launcher.js",
  "author": "Empire Team",
  "license": "MIT",
  "homepage": "https://empire.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/empire/launcher.git"
  },
  "keywords": [
    "launcher",
    "empire",
    "runelite",
    "sso",
    "gaming",
    "electron"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac", 
    "build:linux": "electron-builder --linux",
    "dist": "npm run build -- --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "crypto": "^1.0.1",
    "electron-updater": "^6.1.4",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.empire.launcher",
    "productName": "Empire Launcher",
    "copyright": "Copyright Â© 2024 Empire Team",
    "directories": {
      "output": "dist"
    },
    "files": [
      "empire-launcher.js",
      "launcher-ui.html",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/empire-icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/empire-icon.ico",
      "publisherName": "Empire Team"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/empire-icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/empire-icon.ico",
      "uninstallerIcon": "assets/empire-icon.ico"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "empire",
      "repo": "launcher",
      "private": false
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}