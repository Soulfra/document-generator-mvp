{
  "name": "vibecoding-vault",
  "version": "1.0.0",
  "description": "Vibecoding Vault - AI-Powered Development Environment",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "start:dev": "NODE_ENV=development electron .",
    "start:debug": "NODE_ENV=development electron . --inspect",
    "test-network": "node test-network-connectivity.js",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "ai",
    "development",
    "vibecoding"
  ],
  "author": "Vibecoding Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.0"
  },
  "build": {
    "appId": "com.vibecoding.vault",
    "productName": "Vibecoding Vault",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "src/**/*",
      "public/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    }
  }
}