{
  "id": "js-standard",
  "name": "JavaScript Standard",
  "description": "Standard JavaScript style guide for modern ES6+ development",
  "language": "javascript",
  "isDefault": true,
  "style": {
    "indentation": "spaces",
    "indentSize": 2,
    "lineEnding": "lf",
    "quoteStyle": "single",
    "semicolons": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "maxLineLength": 80
  },
  "rules": {
    "naming": {
      "functions": "camelCase",
      "variables": "camelCase",
      "constants": "UPPER_SNAKE",
      "classes": "PascalCase",
      "files": "kebab-case"
    },
    "imports": {
      "orderBy": "grouped",
      "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
      "removeUnused": true,
      "addMissing": true,
      "preferRelative": false
    },
    "comments": {
      "style": "line",
      "requireForPublicApi": true,
      "removeRedundant": true,
      "preserveTodos": true
    }
  },
  "aiContext": {
    "tone": "professional",
    "priorities": ["readability", "maintainability", "performance"],
    "avoidPatterns": ["var", "eval", "with", "arguments.callee"],
    "preferredPatterns": ["const/let", "arrow functions", "template literals", "destructuring"],
    "focusAreas": ["error-handling", "async-await", "functional-programming"]
  },
  "frameworkConfig": {
    "node": {
      "moduleSystem": "esm",
      "asyncStyle": "async-await"
    }
  },
  "quality": {
    "maxComplexity": 10,
    "maxFileLength": 300,
    "maxFunctionLength": 50
  }
}